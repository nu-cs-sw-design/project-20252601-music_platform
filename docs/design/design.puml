@startuml
title UC1: Start the System - MVC Class Diagram (Instrument as Strategy)

package View {
    class Main {
        +{static} main(args: String[]): void
    }

    class MainView {
        +MainView()
        +showMainScreen(): void
        +showAudioError(): void
    }
}

package Controller {
    class AppController {
        -audioEngine: AudioEngine
        -mainView: MainView

        +AppController(mainView: MainView, audioEngine: AudioEngine)
        +startApplication(): void
    }

    package engine {
        interface Instrument {
            +noteOn(pitch: int, vel: int): void
            +noteOff(pitch: int): void
            +close(): void
        }

        class PianoInstrument implements Instrument {
            +PianoInstrument()
            +noteOn(pitch: int, vel: int): void
            +noteOff(pitch: int): void
            +close(): void
        }

        class AudioEngine {
            -instrument: Instrument
            +AudioEngine(instrument: Instrument)
            +initialize(): boolean
            +noteOn(pitch: int, vel: int): void
            +noteOff(pitch: int): void
        }
    }
}

Main ..> AppController : "creates and calls"
Main ..> MainView
Main ..> PianoInstrument
Main ..> AudioEngine
AppController ..> MainView
AppController ..> AudioEngine
AudioEngine --> Instrument

@enduml
